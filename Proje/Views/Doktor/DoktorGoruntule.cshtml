@{
    Layout = "~/Views/Shared/_NavbarFooter.cshtml";
}


<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <!-- ... (CSS ve diğer başlık bilgileri buraya gelecek) -->
    <style>
        .table-container {
            width: calc(100% - 5cm); /* Set the width of the container */
            margin: 0 auto; /* Center the container horizontally */
            padding-left: 5cm; /* Set left padding */
            padding-right: 5cm; /* Set right padding */
        }

        /* Add CSS for table styling */
        table {
            border-collapse: collapse;
            width: 100%;
            border: 1px solid #ddd;
            font-family: Arial, sans-serif;
            font-weight: bold;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
            font-size: 18px; /* Increase font size (from the default) */
        }

        th {
            background-color: #f2f2f2;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f2f2f2;
        }

        .edit-box,
        .delete-box {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%; /* Kutunun genişliği */
            height: 100%; /* Kutunun yüksekliği */
            color: white; /* Yazı rengi */
            font-size: 16px; /* Yazı boyutu */
            font-weight: bold; /* Yazı kalınlığı */
        }

        .edit-box {
            background-color: orange; /* Düzenle kutusu rengi */
        }

        .delete-box {
            background-color: red; /* Sil kutusu rengi */
        }

            .edit-box:hover,
            .delete-box:hover {
                cursor: pointer; /* Farenin üstüne gelindiğinde imleci değiştir */
            }

            .edit-box label,
            .delete-box label {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 100%; /* Etiketin genişliği */
                height: 100%; /* Etiketin yüksekliği */
            }
    </style>
</head>
<body>

    <div class="table-container">
        @model List<Proje.Models.Doktor>

        <table class="table">
            <thead>
                <tr>
                    <th>Doktor Adı</th>
                    <th>Uzmanlık Alanı</th>
                    <th></th>
                    <th></th> <!-- Yeni sütun başlığı -->
                </tr>
            </thead>
            <tbody>
                @foreach (var doktor in Model)
                {
                    <tr>
                        <td style="font-size: 16px;">@doktor.DoktorAdi</td>
                        <td style="font-size: 16px;">@(doktor.Uzmanlik != null ? doktor.Uzmanlik.UzmanlikAdi : "Belirtilmemiş")</td>
                        <td style="font-size: 16px;">
                            <div class="edit-box">
                                <label>
                                    <input type="checkbox" name="doktorEditIds" value="@doktor.Id" style="display: none;" />
                                    Düzenle
                                </label>
                            </div>
                        </td>
                        <td style="font-size: 16px;">
                            <div class="delete-box">
                                <label>
                                    <input type="checkbox" name="doktorDeleteIds" value="@doktor.Id" style="display: none;" />
                                    Sil
                                </label>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
</body>
</html>
